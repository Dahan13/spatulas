<link rel="stylesheet" href="/stylesheets/home-style.css"/>
<link rel="stylesheet" href="/stylesheets/queue-style.css"/>
<div class="queue-title">   
    <h1> Queue :</h1>
    <div>
        <img id="search-button" src="/images/queue/search.webp" alt="search">
        {{#if searching}}
            <a class="close-button" href="/queue" aria-label="Cancel search"> </a>
        {{/if}}
    </div>
</div>
<div class="commands-container">
    {{#each users}}
        <p class="timestamp"> {{this.timeSettings.time}} ( <span id=count-{{this.timeSettings.time}}> {{this.timeSettings.count}}  / {{#if this.timeSettings.full}} {{this.timeSettings.count}} {{else}} {{this.timeSettings.limit}} {{/if}} </span>) :</p>
        <div class="commands-wrapper">
            {{#if this.users}}
                {{#each this.users}}
                {{#unless this.delivered}}
                    <div class="command">
                        <div class="command-container {{#if this.ready}} ready {{else}} {{#if this.preparation}} preparation {{/if}} {{/if}} ">
                            <p> {{this.userId}} </p>
                            <div class="image-holder"></div>
                        </div>
                        <div class="infos-container">
                            <div class="command-name-container">
                                <p> {{this.firstName}} </p>
                                <p> {{this.lastName}} </p>
                            </div>
                            <div class="menu invisible" id="menu-{{this.userId}}"> 
                                <div class="food-holder">
                                    <p> {{this.burger}} </p>
                                    <p> {{this.fries}} </p>
                                    <p> {{this.drink}} </p>
                                </div>
                                <div class="price-holder">
                                    <p> {{this.price}}â‚¬ </p>
                                </div>
                            </div>
                        </div>
                        <div class="menu-button" data-userId={{this.userId}} id=but-{{this.userId}}> <div data-userId={{this.userId}} id=but2-{{this.userId}}> </div> </div>
                    </div>
                {{/unless}}
                {{/each}}
            {{else}}
                <h2 style="text-align:center"> <em> Wow ! Such void ! </em> </h2>
            {{/if}}
        </div>
    {{/each}}
</div>

<div class="reloader">
    <p> Last update : <span id="last-update-time"> </span> </p>
    <img src="/images/queue/reload.webp" alt="Reload" id="reload-button">
</div>
<script src="javascripts/queue.js"></script>




